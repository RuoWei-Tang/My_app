<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/background1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/iv_head"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@mipmap/avatar"
            android:layout_marginLeft="10dp"
            android:scaleType="centerCrop"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="admin"
            android:textSize="22dp"
            android:gravity="center"
            android:textColor="@color/black"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="#00000000">
        <Button
            android:id="@+id/btn_main_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="川菜"
            android:textColor="@color/black"
            android:background="#00000000"/>
        <Button
            android:id="@+id/btn_main_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="鲁菜"
            android:textColor="@color/black"
            android:background="#00000000"/>
        <Button
            android:id="@+id/btn_main_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="粤菜"
            android:textColor="@color/black"
            android:background="#00000000"/>
        <Button
            android:id="@+id/btn_main_4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="苏菜"
            android:textColor="@color/black"
            android:background="#00000000"/>
        <Button
            android:id="@+id/btn_main_5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="浙菜"
            android:textColor="@color/black"
            android:background="#00000000"/>
        <Button
            android:id="@+id/btn_main_6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="闽菜"
            android:textColor="@color/black"
            android:background="#00000000"/>
        <Button
            android:id="@+id/btn_main_7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="湘菜"
            android:textColor="@color/black"
            android:background="#00000000"/>
        <Button
            android:id="@+id/btn_main_8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="徽菜"
            android:textColor="@color/black"
            android:background="#00000000"/>
    </LinearLayout>

</LinearLayout>